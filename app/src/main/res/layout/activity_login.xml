<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="com.example.administrator.xiangha.LoginActivity"
    android:background="@drawable/z_reg_bg">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/z_me_mypage_ico_back"
        android:id="@+id/login_arrow"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/z_login_ico_xh"
        android:layout_centerHorizontal="true"
        android:id="@+id/z_login_icon_xh"/>

    <TextView android:text="登录香哈"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/z_login_text"
        android:layout_below="@+id/z_login_icon_xh"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/z_login_text"
        android:layout_marginTop="30dp"
        android:id="@+id/relative_qq">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/z_me_account_ico_qq"
            android:id="@+id/z_login_imageicon_qq"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用QQ登录"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/z_login_imageicon_qq"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/relative_qq"
        android:layout_marginTop="20dp"
        android:id="@+id/relative_weixin">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/z_me_account_ico_weixin"
            android:id="@+id/z_login_imageicon_weixin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用QQ登录"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/z_login_imageicon_weixin"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/relative_weixin"
        android:id="@+id/relative_weibo"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/z_me_account_ico_weibo"
            android:id="@+id/z_login_imageicon_weibo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用QQ登录"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/z_login_imageicon_weibo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/relative_weibo"
        android:id="@+id/relative_xiangha"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/z_login_ico_xh"
            android:id="@+id/z_login_ico_xiangha"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用QQ登录"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/z_login_ico_xiangha"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/z_login_reg"
        android:text="注册香哈账号"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relative_xiangha"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
